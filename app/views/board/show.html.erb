<form>
    제목       : <%= @data_show.title %><br><br>
    작성자     : <%= @data_show.editor %><br><br>
    내용       : <%= @data_show.content %><br><br>

    <a href="/edit/<%= @data_show.id %>">[수정]</a>
    <a href="/delete/<%= @data_show.id %>">[삭제]</a><hr><br>
</form>

<form action="/reply_create" method="POST">
    <div class="input-field col s12">
        <input type="hidden"  name="reply_id" value="<%= @data_show.id %>">
        작성자     : <input name="inputEditor" type="text"><br>
        댓글 입력  : <input name="inputReply" type="text">
    </div>
    <button type="submit" name="action">댓글작성</button>
</form>

<% @data_show.replies.each do |p| %>
    <hr>
    작성자 : <%= p.dbEditor %>
    댓글 내용 : <%= p.dbContent %>
    <a href="/reply_delete/<%= p.id %>">[삭제]</a><br>
<% end %> 